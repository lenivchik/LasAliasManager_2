<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="LasAliasManager.GUI.Views.BaseNameManagerWindow"
        Title="Управление основными именами"
        Width="500" Height="550"
        MinWidth="400" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        CanResize="True"
        Icon="/Assets/favicon.ico">

    <Grid Margin="12" RowDefinitions="Auto,Auto,*,Auto,Auto">

        <!-- Строка 0: Заголовок -->
        <TextBlock Grid.Row="0"
                   Text="Основные имена в базе данных"
                   FontSize="16" FontWeight="Bold"
                   Margin="0,0,0,8"/>

        <!-- Строка 1: Поле поиска/фильтра -->
        <TextBox Grid.Row="1"
                 x:Name="FilterTextBox"
                 Watermark="Поиск по имени..."
                 Margin="0,0,0,8"
                 TextChanged="FilterTextBox_TextChanged"/>

        <!-- Строка 2: Список имён -->
        <Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" CornerRadius="4">
            <ListBox x:Name="NamesListBox"
                     Background="White"
                     SelectionMode="Single">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Padding="4,2"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- Строка 3: Кнопки управления -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="8" Margin="0,10,0,0">
            <Button Content="＋ Добавить"
                    Click="AddName_Click"
                    ToolTip.Tip="Добавить новое основное имя"
                    Width="120"/>
            <Button Content="✎ Переименовать"
                    Click="RenameName_Click"
                    ToolTip.Tip="Переименовать выбранное имя"
                    Width="140"/>
            <Button Content="✕ Удалить"
                    Click="DeleteName_Click"
                    ToolTip.Tip="Удалить выбранное имя из БД"
                    Width="120"/>
        </StackPanel>

        <!-- Строка 4: Статус + Закрыть -->
        <Grid Grid.Row="4" ColumnDefinitions="*,Auto" Margin="0,10,0,0">
            <TextBlock x:Name="StatusText"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       Foreground="Gray"
                       TextWrapping="Wrap"/>
            <Button Grid.Column="1"
                    Content="Закрыть"
                    Click="Close_Click"
                    Width="90"
                    HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</Window>
